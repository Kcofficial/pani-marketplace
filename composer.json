{
    "name": "pani/marketplace",
    "description": "A modern Indonesian marketplace platform",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.php",
        "analyze": "phpstan analyse",
        "serve": "php -S localhost:8000 -t public/",
        "install": "composer install && npm install",
        "build": "npm run build"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "keywords": [
        "marketplace",
        "ecommerce",
        "php",
        "indonesia",
        "shopping",
        "seller",
        "customer"
    ],
    "authors": [
        {
            "name": "Paá¹‡i Marketplace Team",
            "email": "info@pani-marketplace.com"
        }
    ],
    "support": {
        "issues": "https://github.com/username/pani-marketplace/issues",
        "source": "https://github.com/username/pani-marketplace",
        "docs": "https://github.com/username/pani-marketplace/wiki"
    }
}
